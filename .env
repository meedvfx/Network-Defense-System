# ============================================
# Network Defense System - Configuration
# ============================================

# ---- Application ----
APP_NAME=Network-Defense-System
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
SECRET_KEY=change-me-to-a-random-secret-key

# ---- Database (PostgreSQL) ----
DB_HOST=localhost
DB_PORT=5432
DB_NAME=network_defense
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=postgresql+asyncpg://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ---- Redis ----
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ---- GeoIP ----
GEOIP_PROVIDER=ip-api
GEOIP_API_KEY=
GEOIP_CACHE_TTL=86400

# ---- AI Models ----
MODEL_DIR=./models
SUPERVISED_MODEL_VERSION=latest
UNSUPERVISED_MODEL_VERSION=latest
ANOMALY_THRESHOLD_K=3.0

# ---- Capture ----
CAPTURE_INTERFACE=auto
CAPTURE_BUFFER_SIZE=1000
CAPTURE_FLOW_TIMEOUT=120

# ---- Auto-Learning ----
RETRAIN_FEEDBACK_THRESHOLD=100
RETRAIN_SCHEDULE_HOURS=24

# ---- API Security ----
API_KEY=change-me-to-a-secure-api-key
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
RATE_LIMIT_PER_MINUTE=60

# ---- Data Retention ----
RETENTION_ENABLED=true
RETENTION_FLOWS_DAYS=30
RETENTION_RUN_INTERVAL_MINUTES=60
RETENTION_DELETE_BATCH_SIZE=5000
RETENTION_KEEP_ALERTED_FLOWS=true

# ---- LLM Reporting ----
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile
GROQ_API_KEY=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
